@import "../../assets/fonts/iconfont.wxss";

::-webkit-scrollbar {
  display: none;
}

/* 表格区域 start */
.title {
  position: relative;
  display: flex;
  font-size: 28rpx;
}

.title.placeholder {
  min-width: 0 !important;
  width: 0 !important;
  padding: 0 !important;
  border: none !important;
}

.table-wrap {
  display: flex;
  flex-direction: row;
  height: auto;
  background-color: #fff;
  font-family: PingFangSC-Semibold, PingFang SC;
  border-top: 1rpx solid rgba(238, 238, 238, 1);
  border-bottom: 1rpx solid rgba(238, 238, 238, 1);
}

.table-container {
  display: flex;
  flex-direction: row; 
  flex: 1;
}

.left-board {
  position: sticky;
  left: 0;
  z-index: 999;
  box-shadow: 0px 4px 8px 0px rgba(17,25,42,0.16);
  background-color: #fff;
}

.left-board .table-row-title,
.right-board .table-row-title {
  width: auto;
  height: 64rpx;
  font-size: 24rpx;
  color: #999999;
  display: flex;
  border-right: 1rpx solid rgba(238, 238, 238, 1);
  border-bottom: 1rpx solid rgba(238, 238, 238, 1);
}

.left-board .table-row-title .title,
.right-board .table-row-title .title {
  align-items: center;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.right-board .table-row-title .title {
  border-right: 1rpx solid rgba(238, 238, 238, 1);
}

.right-board .table-row-title .title .sortable-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 6rpx;
}

.right-board .table-row-title .title .sortable-btn .ascend {
  display: block;
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-bottom: 8rpx solid #b8b8b8;
  margin-bottom: 4rpx;
  margin-top: 3rpx;
}

.right-board .table-row-title .title .sortable-btn .ascend.active {
  border-bottom: 8rpx solid #3679ff !important;
}

.right-board .table-row-title .title .sortable-btn .descend {
  display: block;
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-top: 8rpx solid #b8b8b8;
}

.right-board .table-row-title .title .sortable-btn .descend.active {
  border-top: 8rpx solid #3679ff !important;
}

.left-board .order-style-enabled .row:nth-child(1),
.left-board .order-style-enabled .row:nth-child(1) {
  background:#F3F7FF !important;
  border-bottom: 1px solid rgba(54, 121, 255, 0.08) !important;
  color: #3679FF !important;
}

.left-board .order-style-enabled .row:nth-child(2),
.right-board .order-style-enabled .row:nth-child(2) {
  background:#F1FAFC !important;
  border-bottom: 1px solid rgba(12, 173, 206, 0.08) !important;
  color: #0CADCE !important;
}

.left-board .order-style-enabled .row:nth-child(3),
.right-board .order-style-enabled .row:nth-child(3) {
  background:#FFFCF7 !important;
  border-bottom: 1px solid rgba(255, 171, 56, 0.1) !important;
  color: #FFAB38 !important;
}

.left-board .table-board,
.right-board .table-board {
  font-size: 28rpx;
  font-weight: 500;
  font-family: AlibabaPuHuiTiR;
  color: #333333;
}

.left-board .table-board .row,
.right-board .table-board .row {
  display: flex;
  flex-direction: row;
  border-right: 1rpx solid rgba(238, 238, 238, 1);
  border-bottom: 1rpx solid rgba(238, 238, 238, 1);
}

.left-board .table-board .row-item,
.right-board .table-board .row-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.right-board .table-board .row-item {
  border-right: 1rpx solid rgba(238, 238, 238, 1);
}

.left-board .table-board .row-item .order-board {
  width: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 8rpx;
  box-sizing: border-box;
}

.left-board .table-board .row-item .order-board .iconfont {
  color: #d81e06;
  font-size: 26rpx;
  padding: 0;
}

.left-board .table-board .row-item .order-board .circle-area {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #a4b2cf;
  color: #fff;
  font-size: 10rpx;
}

.left-board .table-board .row-item .title-board,
.right-board .table-board .row-item .title-board  {
  display: flex;
  flex-direction: column;
}

.right-board .table-board .row-item .title-board .title {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.right-board .table-board .row-item .title-board .title .tooltip {
  margin-left: 6rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #3680FE;
}

.left-board .table-board .row-item .title-board .sub-title {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  line-height: 40rpx;
}

.left-board .table-board .row-item .iconfont {
  color: #999;
  font-size: 28rpx;
  padding: 0 0 0 10rpx;
}
/* 表格区域 end */

/* 弹窗区域 start */
.tooltip-wrap {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tooltip-wrap .tooltip-board {
  margin-top: -100rpx;
  max-width: 420rpx;
  max-height: 500rpx;
  padding: 25rpx 20rpx;
  background: #333;
  opacity: .7;
  overflow-y: auto;
  color: #fff;
  font-size: 26rpx;
  border-radius: 8rpx;
}
/* 弹窗区域 end */
