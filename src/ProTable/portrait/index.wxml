<view>
  <block>
    <!-- 表格区域 start -->
    <scroll-view
      class="table-wrap"
      style="{{ mr }}rpx; height: {{ height }}rpx"
      scroll-x
      enable-flex
      enhanced
      bounces="{{ false }}"
      show-scrollbar="{{ false }}"
    >
      <view class="table-container">

        <!-- 左侧固定列区域 start -->
        <view class="left-board">
          <view class="table-row-title">
            <view
              wx:for="{{ leftColumns }}"
              wx:key="index"
              class="title"
              style="width: {{ item.width || 120 }}rpx; justify-content: {{ item.align || 'center' }}"
            >
              {{ item.title }}
            </view>
          </view>
          <view
            class="table-board {{ filter.getStyle(order.enabled && order.styleEnabled, 'order-style-enabled') }}"
          >
            <view
              wx:for="{{ list }}"
              wx:for-item="colItem"
              wx:for-index="colIndex"
              wx:key="colIndex"
              class="row"
            >
              <view
                wx:for="{{ leftColumns }}"
                wx:for-item="rowItem"
                wx:for-index="rowIndex"
                wx:key="rowIndex"
                class="row-item"
                style="width: {{ rowItem.width || 120 }}rpx; height: {{ colItem._custom_height }}rpx; justify-content: {{ rowItem.align || 'center' }};"
              >
                <block
                  wx:if="{{ order.enabled }}"
                >
                  <view class="order-board">
                    <text wx:if="{{ colIndex <= 2 }}" class="order iconfont icon-{{ colIndex + 1 }}"></text>
                    <view wx:else class="circle-area">{{ colIndex + 1 }}</view>
                  </view>
                </block>

                <view class="title-board">
                  <text>{{ colItem[rowItem.dataIndex] }}</text>
                  <block
                    wx:if="{{ rowItem.sub }}"
                  >
                    <text class="sub-title">{{ colItem[rowItem.sub.dataIndex] }}</text>
                  </block>
                </view>
                <block wx:if="{{ order.enabled && order.next }}">
                  <text class="iconfont icon-right-arrow"></text>
                </block>
              </view>
            </view>
          </view>
        </view>
        <!-- 左侧固定列区域 end -->

        <!-- 右侧正常列区域 start -->
        <view class="right-board">
          <view class="table-row-title">
            <view
              wx:for="{{ middleColumns }}"
              wx:key="index"
              class="title"
              style="width: {{ item.width || 120 }}rpx; justify-content: {{ item.align || 'center' }}"
            >
              {{ item.title }}

              <view wx:if="{{ item.sortable }}" class="sortable-btn">
                <text class="ascend {{ filter.getStyle(sortField === item.dataIndex && sortType === 'asc', 'active') }}"></text>
                <text class="descend {{ filter.getStyle(sortField === item.dataIndex && sortType === 'desc', 'active') }}"></text>
              </view>
            </view>
          </view>
          <view
            class="table-board {{ filter.getStyle(order.enabled && order.styleEnabled, 'order-style-enabled') }}"
          >
            <view
              wx:for="{{ list }}"
              wx:for-item="colItem"
              wx:for-index="colIndex"
              wx:key="colIndex"
              class="row"
            >
              <view
                wx:for="{{ middleColumns }}"
                wx:for-item="rowItem"
                wx:for-index="rowIndex"
                wx:key="rowIndex"
                class="row-item"
                style="width: {{ rowItem.width || 120 }}rpx; height: {{ colItem._custom_height }}rpx; justify-content: {{ rowItem.align || 'center' }};"
                data-field="{{ rowItem.dataIndex }}"
                data-tooltip="{{ rowItem.tooltip }}"
                catch:tap="handleShowToolTip"
              >
                <view class="title-board">
                  <view class="title">
                    <text>{{ colItem[rowItem.dataIndex] }}</text>
                    <text
                      class="tooltip"
                      wx:if="{{ rowItem.tooltip && colItem[rowItem.dataIndex + '_tooltip'] }}"
                      wx:key="rowIndex"
                      data-index="{{ colIndex }}"
                      data-field="{{ rowItem.dataIndex }}"
                      data-tooltip="{{ rowItem.tooltip }}"
                      catch:tap="handleShowToolTip"
                    >更多</text>
                  </view>
                </view>
              </view>
            </view>
          </view>
        </view>
        <!-- 右侧正常列区域 end -->
      </view>
    </scroll-view>
    <!-- 表格区域 end -->
  </block>
</view>

<wxs module="filter">
/**
 * @file 字符串过滤
 * @module Protable/shared/filter
 */

var getStyle = function (exp, target) {
  if (exp) return target;
  return '';
}

module.exports = {
  getStyle: getStyle
}
</wxs>