<view>
  <view wx:if="{{showPreview}}" class="perview-wrap">
    <view class="indicators">
      {{ current + 1 }}/{{ urls.length }}
    </view>

    <swiper
      class="swiper-wrap"
    >
      <swiper-item
        class="swiper-board"
      >
        <movable-area class="img-wrap">
          <movable-view
            class="img-board"
            direction="all"
            scale
            damping="100"
            scale-min="{{ scaleMin }}"
            scale-max="{{ scaleMax }}"
            out-of-bounds
            scale-value="{{ scaleValue }}"
            catch:scale="onScaleChange"
            catch:touchend="onTouchEnd"
          >
            <image
              mode="aspectFit"
              class="img"
              :src="item"
              :catch:mouseleave="onMouseLeave"
            />
          </movable-view>
        </movable-area>
      </swiper-item>
    </swiper>
  </view>
</view>