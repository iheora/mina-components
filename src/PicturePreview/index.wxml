<view>
  <view wx:if="{{ showPreview }}" class="perview-wrap">
    <view class="indicators">
      {{ current + 1 }}/{{ urls.length }}
    </view>

    <swiper
      class="swiper-wrap"
      :vertical="{{ false }}"
      current="{{ current }}"
      catch:change="onChange"
    >
      <swiper-item
        class="swiper-board"
        wx:for="{{ urls }}"
        wx:key="index"
        catch:touchmove="{{ moveable ? '' : 'disabled' }}"
        catch:tap="onClose"
      >
        <movable-area
          class="img-wrap"
        >
          <movable-view
            class="img-board"
            direction="all"
            scale
            damping="100"
            scale-min="{{ scaleMin }}"
            scale-max="{{ scaleMax }}"
            out-of-bounds
            scale-value="{{ scaleVal }}"
            catch:scale="onScaleChange"
            catch:touchend="onTouchEnd"
          >
            <image
              mode="aspectFit"
              class="img"
              src="{{ item }}"
            />
          </movable-view>
        </movable-area>
      </swiper-item>
    </swiper>
  </view>
</view>